<div class="jumbotron">
</div>
<div class="container">
    <div class="row">
        <div class="col s6" id="freshBurgers" style="text-align:center">
            <h1>EATEN BURGERS</h1>
            <ul>
                {{#each burger}} {{#unless devoured}} {{> burger/burgerView devoured=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col s6" id="eatenBurgers" style="text-align:center">
            <h1>NOT EATEN BURGERS</h1>

            <ul>
                {{#each burger}} {{#if devoured}} {{> burger/burgerView devoured=false}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col s2"></div>
        <div class="col s8" style="text-align:center">
            <form class="create-form">

                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" name="name" id="burgerName">
                </div>

                <button type="submit" id="submitButton">Add Burger</button>
            </form>
        </div>
        <div class="col s2"></div>
    </div>
</div>